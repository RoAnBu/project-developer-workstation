#!/bin/bash


get_latest_release() {
  curl --silent -m 10 "https://api.github.com/repos/$1/releases/latest" |
    grep '"tag_name":' |
    sed -E 's/.*"([^"]+)".*/\1/'
}

which terraform >/dev/null 2>&1
if [ $? != 0 ]
then
  echo "0"
  exit 0
fi

remote_version=$(get_latest_release "hashicorp/terraform")
local_version=$(terraform --version | head -n 1 | awk -F '[ ]' '{print $2}')

if [ -z "$remote_version" ]
then
  echo "0"
  exit 0
fi
if [ "$remote_version" == "$local_version" ]
then
  echo "0"
  exit 0
fi

echo "1"

